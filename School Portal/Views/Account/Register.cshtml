@model School_Portal.Models.ApplicationUser
@{
    ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}


 <div class="page-wraper">
	<div id="loading-icon-bx"></div>
	<div class="account-form">
		<div class="account-head" style="background-image:url(~/template/assets/images/background/bg2.jpg);">
			<a href="index.html"><img src="~/template/assets/images/logo-white-2.png" alt=""></a>
		</div>
		<div class="account-form-inner">
			<div class="account-container">
				<div class="heading-bx left">
					<h2 class="title-head">Sign Up <span>Now</span></h2>
					<p>Login Your Account <a asp-controller="Account" asp-action="Login">Click here</a></p>
				</div>
				@* <form class="contact-bx" asp-action="RegisterUser" asp-controller="Account"> *@
					 <div class="row placeani">
						<div class="col-lg-12">
							<div class="form-group">
								<div class="input-group">
									<label>FirstName</label>
									<input type="text" id="firstname" class="form-control">
								</div>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<div class="input-group">
									<label>Last Name</label>
									<input type="text" id="lastname" class="form-control">
								</div>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<div class="input-group">
									<label>Email</label>
									<input type="text" id="email" class="form-control">
								</div>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<div class="input-group">
									<label>Password</label>
									<input type="password" class="form-control" id="password">
								</div>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<div class="input-group">
									<label>Phone Number</label>
									<input  type="tel" class="form-control" id="phonenumber">
								</div>
							</div>
						</div>
						<div class="col-lg-12 m-b30">
							<button name="submit" type="submit" value="Submit" onclick="Registration()" class="btn button-md">Sign Up</button>
						</div>
				
					</div>
				@* </form> *@
			</div>
		</div>
	</div>
</div> 
<script src="~/js/main.js"></script>