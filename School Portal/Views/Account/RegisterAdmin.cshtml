@model School_Portal.Models.ApplicationUser
@{
	ViewData["Title"] = "RegisterAdmin";
	Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}
<div class="page-wrapper">
	<div id="loading-icon-bx"></div>
	<div class="account-form">
		<div class="account-head" style="background-image:url(~/template/assets/images/background/bg2.jpg);">
			<a href="index.html"><img src="~/template/assets/images/logo-white-2.png" alt="Logo"></a>
		</div>
		<div class="account-form-inner">
			<div class="account-container">
				<div class="heading-bx left">
					<h2 class="title-head">SignUp <span>Now</span></h2>
					<p>Login Your Account <a asp-controller="Account" asp-action="Login">Click here</a></p>
				</div>
				<div class="row placeani">
					<div class="col-lg-12">
						<div class="form-group">
							<div class="">
								<label for="firstname">First Name</label>
								<input type="text" id="firstname" class="form-control" style="border-radius:10px;">
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="form-group">
							<div class="">
								<label for="lastname">Last Name</label>
								<input type="text" id="lastname" class="form-control" style="border-radius:10px;">
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="form-group">
							<div class="">
								<label for="email">Email</label>
								<input type="email" id="email" class="form-control" style="border-radius:10px;">
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="form-group">
							<div class="">
								<label for="password">Password</label>
								<input type="password" id="password" class="form-control" style="border-radius:10px;">
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="form-group">
							<div class="">
								<label for="phonenumber">Phone Number</label>
								<input type="tel" id="phonenumber" class="form-control" style="border-radius:10px;">
							</div>
						</div>
					</div>
					<div class="col-lg-12 m-b30">
						<button name="submit" type="submit" value="Submit" onclick="Registration()" class="btn button-md">Sign Up</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="~/js/main.js"></script>