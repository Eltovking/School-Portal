@model School_Portal.ViewModels.PaymentViewModel
    @{
        ViewData["Title"] = "";
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }

<div class="container mt-4 text-center">
		<div>
			<h2>Payment Form</h2>
			<div class="row mx-auto w-50">
				<div class="col-lg-12">
					<div class="form-group">
						<div class="">
							<input id="courseId" value="@Model?.CourseId" class="form-control" hidden style="border-radius:10px;">
						</div>
					</div>
				</div> 
				<div class="col-lg-12">
					<div class="form-group">
						<div class="">
							<label for="BankPaidFrom">Bank Paid From:</label>
							<input type="text" id="bankPaidFrom"class="form-control" style="border-radius:10px;">
						</div>
					</div>
				</div>
				<div class="col-lg-12">
					<div class="form-group">
						<div class="">
							<label for="PaymentMethod">PaymentMethod</label>
							<input type="text" id="paymentMethod"class="form-control" style="border-radius:10px;">
						</div>
					</div>
				</div>
			<div class="col-lg-12">
				<div class="form-group" style="margin-bottom: 20px;">
					<label for="image" style="font-size: 1.2em;">Image</label>
					<input type="file" asp-for="Image" name="image" accept="image/*" class="form-control" style="font-size: 1.2em;" onchange="previewImage(event)">
				</div>
			</div>
				<div class="col-lg-6 m-b mx-auto">
					<button name="submit" type="submit" value="Submit" onclick="CoursePayment()" class="btn button-md">Submit</button>
				</div>
			</div>
		</div>
</div>




