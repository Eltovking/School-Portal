@model School_Portal.Models.Course

<div class="m-auto">

    <div class="card-header text-center">
        <h3> Course Details: </h3>
    </div>
    @if (Model != null)
    {
        <div class="">
            <div class="row">
                <div class="col-12 mt-4">
                    <img src="@Model.Image"/>
                </div>
            </div>
            <div class="col-6 text-center mt-3" style="margin-left:20%">
                <p><b>Name:</b> <span id="Name">@Model.Name</span></p>
            </div>
            <div class="row">
                <div class="col-6">
                    <p>Price: <span id="Price">@Model.Price</span></p>
                </div>
               
                <div class="col-6">
                    <p>CourseCategory: <span id="CourseCategory">@Model?.CourseCategory?.Name</span></p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p>Teacher: <span id="Teacher">@Model?.Teacher?.FullName</span></p>
                </div>
                <div class="col-6">
                    <p>Description: <span id="Description">@Model?.Description</span></p>
                </div>
            </div>
            
            <b class="text-center">Payment details</b>

            <div class=" mt-4 text-left">
                <div>
                    <div class="row">
                        <div class="col-lg-6">
                            <h5> Account Name: </h5>
                        </div>
                        <div class="col-lg-6">
                            <p> M & D Institute ltd</p>
                        </div>
                    </div><div class="row">
                        <div class="col-lg-6">
                            <h5> Account Number: </h5>
                        </div>
                        <div class="col-lg-6">
                            <p> 0020132624</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <h5> Bank: </h5>
                        </div>
                        <div class="col-lg-6">
                            <p> Access</p>
                        </div>
                    </div>
                    

                </div>
            </div>

            

        </div>
    }
</div>