@model IEnumerable<School_Portal.Models.Course>


@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Courses</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Courses</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Your Courses</h4>
                    </div>
                    @if (Model != null && Model.Count() > 0)
                    {
                        @foreach (var course in Model)
                        {

                            <div class="widget-inner">
                                <div class="card-courses-list admin-courses">
                                    <div class="card-courses-media">
                                        @if (string.IsNullOrEmpty(course.Image))
                                        {
                                            <img src="~/template/assets/images/courses/pic1.jpg" alt="" />
                                        }
                                        else
                                        {
                                            <img src="@course.Image" alt="" />
                                        }
                                    </div>
                                    <div class="card-courses-full-dec">
                                        <div class="card-courses-title">
                                            <h4>@course.Name</h4>
                                        </div>
                                        <div class="card-courses-list-bx">
                                            <ul class="card-courses-view">
                                                <li class="card-courses-user">Category: @course.CourseCategory?.Name</li>
                                                <li class="card-courses-price">
                                                    <h5>₦@course.Price</h5>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="row card-courses-dec">
                                            <div class="col-md-12">
                                                <h6 class="m-b10">Course Description</h6>
                                                <p>@course.Description </p>
                                            </div>
                                            <div class="col-md-12">
                                                 @* here i make a conditional statement to check when the status enum of remove button is clicked then other remains to be shown  *@
                                                @if(course.Status == School_Portal.Data.SchoolPortalEnums.CourseStatus.Remove)
                                                {
                                                    <a asp-controller="Course" asp-action="EditCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Edit</a>
                                                    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-courseId="@course.Id" class="btn red outline radius-xl">Delete</a>
                                                    <a asp-controller="Course" asp-action="ApproveCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Approve</a>
                                                }else if(course.Status == School_Portal.Data.SchoolPortalEnums.CourseStatus.Approve)
                                                {
                                                    <a asp-controller="Course" asp-action="EditCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Edit</a>
                                                    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Delete</a>
                                                    <a asp-controller="Course" asp-action="RemoveCourse" asp-route-courseId="@course.Id" class="btn red outline radius-xl ">Decline</a>
                                                }
                                                else
                                                {
                                                    <a asp-controller="Course" asp-action="EditCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Edit</a>
                                                    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Delete</a>
                                                    <a asp-controller="Course" asp-action="ApproveCourse" asp-route-courseId="@course.Id" class="btn green radius-xl outline">Approve</a>
                                                    <a asp-controller="Course" asp-action="RemoveCourse" asp-route-courseId="@course.Id" class="btn red outline radius-xl ">Decline</a>
                                                }
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        }

                    }
                   
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
       
    </div>
</main>
