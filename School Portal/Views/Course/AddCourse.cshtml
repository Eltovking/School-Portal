@model School_Portal.Models.Course
@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Course</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .form-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input[type="text"],
        .form-group input[type="number"],
        .form-group {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .form-group button {
            padding: 10px 15px;
            background-color: #4c1864;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .form-group button:hover {
          background-color: #4c1864;
        }
        .card-header{
            background-color: #4c1864;
        }
    </style>
</head>
<body>

    <div class="container-fluid" style="margin-top: 10px;margin-left: 10%;padding-right: 20%;padding-left: 18%; padding-top:3%;">
          <div class="card">
            <div class="card-header text-white text-center">
                <h2>Create Course</h2>
            </div>
              <div class="card-body">
                <form asp-action="AddCourse" asp-controller="Course" method="POST" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" asp-for="Name"name="Name">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" asp-for="Price"name="price" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group" style="margin-bottom: 20px;">
                                <label for="image" style="font-size: 1.2em;">Image</label>
                                <input type="file" asp-for="Image"name="image" accept="image/*" class="form-control" style="font-size: 1.2em;" onchange="previewImage(event)">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group" style="margin-bottom: 20px;">
                                <label for="Category" style="font-size: 1.2em;">Category</label>
                                <select asp-for="CategoryId" name="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-control select" style="width: 100%; padding: 10px; font-size: 1.2em;" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Teachers</label>
                                <select asp-for="TeacherId" name="TeacherId" asp-items="@(new SelectList(ViewBag.Teacher, "Id", "FirstName"))" class="form-control select" style="width:100%;" required>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group" style="margin-bottom: 20px;">
                                <label for="Description" style="font-size: 1.2em;">Description</label>
                                <textarea asp-for="Description" name="Description" class="form-control" style="width: 100%; height: 150px; padding: 10px; font-size: 1.2em;" required></textarea>
                            </div>
                        </div>


                        <div class="col-sm-12 pt-2">
                            <div class="form-group text-center">
                                <button type="submit">Create Course</button>
                            </div>
                        </div>
                    </div>
                </form>
              </div>
          </div>
    </div>

</body>
</html>
